<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/bg1">
    <TextView
        android:id="@+id/sign_up_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:hint=" Name"
        android:inputType="text"
        android:padding="15dp" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:hint="Email "
        android:inputType="textEmailAddress"
        android:padding="15dp" />

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:hint="phone"
        android:inputType="number"
        android:padding="15dp" />

    <EditText
        android:id="@+id/passward_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="15dp"
        android:elevation="3dp"
        android:hint="Passward"
        android:inputType="textPassword"
        android:padding="15dp" />
    <CheckBox
        android:id="@+id/chk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show passward"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="Register"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#6a6a6a"
        android:background="@drawable/button_shape"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_color"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/have_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Already have an account?"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/sign_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Sign In"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/explore_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_shape"
        android:padding="15dp"
        android:text="Explore the App"
        android:textAllCaps="false"
        android:textColor="#6a6a6a"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/explore_button_color"/>

</LinearLayout>